// Cadastro de carros    ---------------------------


carro[1] <- "Toyota Corolla (2015) - categoria B"
precoC[1] <- 69690
carro[2] <- "Chevrolet Montana (2025) - categoria B"
precoC[2] <- 138290
carro[3] <- "Fiat Uno Attractive 1.0 (2021) - categoria C"
precoC[3] <- 47337
carro[4] <- "Honda HR-V (2016) - categoria C"
precoC[4] <- 80560
carro[5] <- "Jeep Compass (2025) - categoria C"
precoC[5] <- 234384
